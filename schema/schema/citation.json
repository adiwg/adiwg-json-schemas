{
  "id": "citation.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for citation",
  "type": "object",
  "required": ["title", "date"],
  "anyOf": [
    {
      "$ref": "#/definitions/citationBase"
    }
  ],
  "definitions": {
    "citationBase": {
      "description": "base schema for citation, date not required",
      "type": "object",
      "required": ["title"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "date": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["date", "dateType"],
            "properties": {
              "date": {
                "$ref": "../schema.json#definitions/date"
              },
              "dateType": {
                "type": "string"
              }
            }
          }
        },
        "edition": {
          "type": "string"
        },
        "responsibleParty": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "contact.json#/definitions/contactRef"
          }
        },
        "presentationForm": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "additionalIdentifier": {
          "type": "object",
          "properties": {
            "doi": {
              "type": "string"
            },
            "isbn": {
              "type": "string"
            },
            "issn": {
              "type": "string"
            }
          }
        },
        "onlineResource": {
          "type": "array",
          "items": {
            "$ref": "./onlineResource.json#"
          }
        }
      }
    }
  }
}