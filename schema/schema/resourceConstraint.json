{
  "id": "resourceConstraint.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for resource constraint",
  "anyOf": [
    {
      "$ref": "#/definitions/useLimitation"
    }, {
      "$ref": "#/definitions/legalConstraint"
    }, {
      "$ref": "#/definitions/securityConstraint"
    }
  ],
  "definitions": {
    "useLimitation": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "legalConstraint": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "accessConstraint": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "useConstraint": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "otherConstraint": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "securityConstraint": {
      "type": "object",
      "required": ["classification"],
      "additionalProperties": false,
      "properties": {
        "classification": {
          "type": "string"
        },
        "userNote": {
          "type": "string"
        },
        "classificationSystem": {
          "type": "string"
        },
        "handlingDescription": {
          "type": "string"
        }
      }
    }
  }
}